<div class="row">
  <div class="col-md-9">
    <h2>記事一覧</h2>
    <%# 記事一覧 %>
      <% row_count = 0 %>
      <% @articles.each_with_index do |article, index| %>
        <% cycle "odd", "even" %>

        <%# 奇数行目でrowを作る %>
        <% if current_cycle == "odd" %>
          <div class="row">
        <% end %>

        <div class="col-xs-12 col-sm-6 col-md-6 thumb-list">
          <div class="image">
            <% if article.created_at >= Date.today-30 %>
              <div class="new_icon"></div>
            <% end %>
            <%= link_to image_tag(article.photo(:medium), :class => "img-responsive"), article %>
          </div>
          <div class="caption">
            <div>
              <span class="label label-<%= article.genre.css_class %>"><%= article.genre.name %></span>
              <span class="area"><%= article.area.name %></span>
              <span class="pepper">
                <% article.spiciness.times do |n| %>
                <%= image_tag 'pepper.png' %>
                <% end %>
              </span>
            </div>
            <h4><%= article.title %></h4>
            <%# <div class="tags">
            <span class="label label-default">子ども</span>
            <span class="label label-default">わくわく</span>
          </div> %>
        </div>
      </div>

      <%# 偶数行目でrowを閉じる %>
      <% if current_cycle == "even" %>
        </div>
      <% end %>
    <% end %>

    <%# 奇数行で終わった時はrowを閉じる %>
    <% if current_cycle == "odd" %>
      </div>
    <% end %>
  </div>
  <!-- col-md-9 -->
  <div class="hidden-xs hidden-sm col-md-3 sidebar">
    <%= render partial: "shared/sidebar" %>
  </div>
</div>

.container_inquiry
  = form_for @inquiry, :url => inquiry_confirm_path do |f|
    .page_header
      %h1 お問い合わせ
    - if @inquiry.errors.any?
      %div.alert.alert-danger{role: "alert"}
        %strong 入力内容にエラーがあります
        %ul
          - @inquiry.errors.each do |attr, msg|
            %li #{msg}

    %table.table
      %tr
        %th
          名前
          %span.text-danger （必須）
        %td
          姓
          = f.text_field :family_name
          名
          = f.text_field :first_name
      %tr
        %th
          フリガナ
          %span.text-danger （必須）
        %td
          セイ
          = f.text_field :family_name_kana
          メイ
          = f.text_field :first_name_kana
      %tr
        %th
          メールアドレス
          %span.text-danger （必須）
        %td
          = f.text_field :email
      %tr
        %th お問い合わせ内容
        %td
          = f.text_area :message

    = f.submit "確認", class: "btn btn-primary"

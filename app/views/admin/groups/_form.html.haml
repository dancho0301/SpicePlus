= form_for([:admin,@group]) do |f|
  - if @group.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@group.errors.count, "error")
        prohibited this group from being saved:
      %ul
        - @group.errors.full_messages.each do |message|
          %li
            = message


  %div.form-group
    = f.label :name, "団体名"
    %br
    = f.text_field :name, class: "form-control"
  %div.form-group
    = f.label :master_name, "代表者名"
    %br
    = f.text_field :master_name, class: "form-control"
  %div.form-group
    = f.label :address, "住所"
    %br
    = f.text_field :address, class: "form-control"
  %div.form-group
    = f.label :tel, "電話番号"
    %br
    = f.text_field :tel, class: "form-control"
  %div.form-group
    = f.label :url
    %br
    = f.text_field :url, class: "form-control"
  %div.form-group
    = f.label :mail
    %br
    = f.text_field :mail, class: "form-control"
  %div.form-group
    = f.label :activity, "主な活動"
    %br
    = f.text_area :activity, class: "form-control"
  %div.form-group
    = f.label :detail, "立ち上げ経緯"
    %br
    = f.text_area :detail, class: "form-control"
  %div.actions.form-group
    = f.submit class: "btn btn-primary"

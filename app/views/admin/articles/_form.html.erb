<%= form_for([:admin, @article]) do |f| %>
<div class="row">
  <div class="col-md-12">
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :title, "ジャンル" %><br>
      <%= f.collection_select(:genre_id, @genres, :id, :name, {}, {:class => 'form-control'}) %>
    </div>
    <div class="form-group">
      <%= f.label :title, "地域" %><br>
      <%= f.collection_select(:area_id, @areas, :id, :name, {}, {:class => 'form-control'}) %>
    </div>
    <div class="form-group">
      <%= f.label :spiciness, "辛さ" %><br>
      <%= f.collection_select(:spiciness, @spiciness, :id, :name, {}, {:class => 'form-control'}) %>
    </div>

    <div class="form-group">
      <%= f.label :photo, "トップ画像" %>
      <%= f.file_field :photo %>
    </div>
    <div class="form-group">
      <%= f.label :article, "本文" %>
      <%# f.text_area :article, :id => "summernote", :class => "form-control" %>
      <%= f.text_area :article, :class => "ckeditor form-control" %>
    </div>

    <div class="actions">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
</div>
<script src="/ckeditor/ckeditor.js"></script>
<% end %>

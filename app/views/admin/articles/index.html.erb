<% if notice.present? %>
<div class="alert alert-success">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= notice %>
</div>
<% end %>
<div class="row">
  <div class="col-md-12">
    <h1>記事一覧</h1>
    <table class="table">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td>
              <%= link_to 'プレビュー', [:admin, article], :class => "btn btn-primary" %>
              <%= link_to '編集', edit_admin_article_path(article), :class => "btn btn-primary" %>
              <%= link_to '削除', [:admin, article], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= link_to '新規投稿', new_admin_article_path, :class => "btn btn-primary" %>    
  </div>
</div>

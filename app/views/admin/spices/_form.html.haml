= form_for(@spice) do |f|
  - if @spice.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@spice.errors.count, "error")
        prohibited this spice from being saved:
      %ul
        - @spice.errors.full_messages.each do |message|
          %li
            = message


  %div.form-group
    = f.label :name
    %br
    = f.text_field :name, class: "form-control"
  %div.form-group
    = f.label :css_class
    %br
    = f.text_field :css_class, class: "form-control"
  %div.actions
    = f.submit

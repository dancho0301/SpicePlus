<%= form_for([:admin, @article_image]) do |f| %>
<div class="row">
  <div class="col-md-12">
  <% if @article_image.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @article_image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "説明" %><br>
      <%= f.text_field :description, :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :image, "トップ画像" %>
      <%= f.file_field :image %>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
</div>
<script src="/ckeditor/ckeditor.js"></script>
<% end %>

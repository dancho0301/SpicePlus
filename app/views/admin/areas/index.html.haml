%h1
  Listing areas

%table.table
  %thead
    %tr
      %th
        Name
      %th{colspan: "2"}

  %tbody
    - @areas.each do |area|
      %tr
        %td
          = area.name
        %td.function
          = link_to '変更', edit_admin_area_path(area), class: "btn btn-default"
        %td.function
          = link_to '削除', admin_area_path(area), method: :delete, data: { confirm: '本当によろしいですか？' }, class: "btn btn-danger"

%br

= link_to '新規作成', new_admin_area_path, class: "btn btn-primary"

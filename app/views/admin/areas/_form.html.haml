= form_for([:admin, @area]) do |f|
  - if @area.errors.any?
    %div#error_explanation
      %h2
        = pluralize(@area.errors.count, "error")
        prohibited this area from being saved:
      %ul
        - @area.errors.full_messages.each do |message|
          %li
            = message


  %div.form-group
    = f.label :name
    %br
    = f.text_field :name, class: "form-control"
  %div.actions.form-group
    = f.submit class: "btn btn-default"

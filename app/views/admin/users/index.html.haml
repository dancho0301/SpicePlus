%h1
  ユーザ一覧

%table.table.table-hover
  %thead
    %tr
      %th ユーザ名
      %th メールアドレス
      %th 管理者
      %th{colspan: "2"}

  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td
          - if user.administrator
            ◯
        %td.function
          = link_to '変更', edit_admin_user_path(user), class: "btn btn-primary"
        %td.function
          = link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当によろしいですか？' }, class: "btn btn-danger"

%br

= link_to '新規登録', new_admin_user_path, class: "btn btn-primary"

%h1
  Log in
= form_tag sessions_path, class: "form-inline" do
  .form_group
    = label_tag :email
    = text_field_tag :email, params[:email], class: "form-control"
  .form_group
    = label_tag :password
    = password_field_tag :password
  .form_group
    = check_box_tag :remember_me, 1, params[:remember_me]
    = label_tag :remember_me
  .actions
    = submit_tag "Log in"
